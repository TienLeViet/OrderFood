<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.orderfood.Chef.Chef">

    <TextView
        android:id="@+id/textView_contentPrepare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chuẩn bị"
        android:textSize="25dp"
        android:textColor="#bc0909"
        android:background="#1abc1a" />

    <TextView
        android:id="@+id/textView_prepare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_contentPrepare"
        android:layout_above="@+id/button_cook"/>

    <Button
        android:id="@+id/button_cook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/complete" />

</RelativeLayout>
